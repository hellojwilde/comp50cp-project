<!DOCTYPE html>
<html lang="en">
<head>
  <title>Register</title>
</head>
<body>
  <h1>Register</h1>
  <form method="post" action="/register_post.yaws">
    <p>
      <label for="registrar">Registrar (PID):</label>
<erl>
  % TODO: figure out how to get yaws to respect -include paths when JITting.
  -record(frontend_pids, {
    registrar_pid,
    tally_collector_pid,
    manager_pid
  }).


  out(A) ->
    {ehtml,
      {input, [
        {type, "text"}, 
        {name, "registrar"}, 
        {value, pid_to_list(A#arg.opaque#frontend_pids.registrar_pid)}
      ]}}.
</erl>
    </p>
    <p>
      <label for="name">Name:</label>
      <input type="text" name="name"/>
    </p>
    <p>
      <input type="submit" name="Register" />
    </p>
  </form>
</body>
</html>